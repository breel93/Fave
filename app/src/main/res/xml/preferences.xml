<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory android:title="Preference settings">
    <MultiSelectListPreference
        android:defaultValue="@array/empty_array"
        android:entries="@array/pref_sources_option_labels"
        android:entryValues="@array/pref_sources_option_values"
        android:key="@string/pref_source_key"
        android:title="@string/pref_source_label" />


    <ListPreference
        android:defaultValue="@string/us"
        android:entries="@array/pref_country_option_label"
        android:entryValues="@array/pref_country_option_value"
        android:key="@string/country_key"
        android:summary="@string/country_label_all"
        android:title="@string/country_label" />

    <ListPreference
        android:defaultValue="@string/us"
        android:entries="@array/pref_lang_option_label"
        android:entryValues="@array/pref_lang_option_value"
        android:key="@string/language_key"
        android:summary="@string/language_label_all"
        android:title="@string/language_label" />

    <ListPreference
        android:defaultValue="@string/pref_everything_sort_by_all_value"
        android:entries="@array/pref_everything_sort_by_labels"
        android:entryValues="@array/pref_everything_sort_by_values"
        android:key="@string/pref_everything_sort_by_key"
        android:summary="@string/pref_everything_sort_by_label_all"
        android:title="@string/pref_everything_sort_by_label" />
  </PreferenceCategory>


  <PreferenceCategory
      android:title="@string/pref_skin_title"
      app:iconSpaceReserved="false">
    <SwitchPreference
        android:checked="true"
        android:defaultValue="@string/pref_theme_true_value"
        android:key="@string/pref_theme_key"
        android:title="Night Mode" />

  </PreferenceCategory>
</PreferenceScreen>