<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/eightDP"
      android:layout_marginEnd="@dimen/eightDP"
      android:layout_marginTop="@dimen/eightDP">

    <include
        android:id="@+id/breakingNewsSlide"
        layout="@layout/breaking_new_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/twoDP"
        android:layout_marginEnd="@dimen/twoDP"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breakingNewsSlide">
      <include
          layout="@layout/shimmer_articlelist_item"/>
      <include
          layout="@layout/shimmer_articlelist_item"/>
    </LinearLayout>



  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

