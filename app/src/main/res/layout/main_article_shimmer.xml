<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/fiveDP"
    android:layout_margin="2dp"
    android:background="@drawable/card_shimmer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

  <View
      android:id="@+id/imageView"
      android:layout_width="150dp"
      android:layout_height="120dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/round_rectangle"
      android:backgroundTint="@color/colorGrey"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <View
      android:id="@+id/articleView"
      android:layout_width="0dp"
      android:layout_height="16dp"
      android:background="@color/colorGrey"
      android:layout_marginTop="@dimen/fiveDP"
      android:layout_marginStart="@dimen/fiveDP"
      android:layout_marginEnd="@dimen/fiveDP"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView"
      app:layout_constraintTop_toTopOf="@+id/imageView" />

  <View
      android:id="@+id/articleView2"
      android:layout_width="150dp"
      android:layout_height="16dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="8dp"
      android:background="@color/colorGrey"
      app:layout_constraintStart_toEndOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/articleView" />

  <View
      android:layout_width="100dp"
      android:layout_height="10dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="@dimen/fiveDP"
      android:layout_marginBottom="8dp"
      android:background="@color/colorGrey"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/articleView" />

</androidx.constraintlayout.widget.ConstraintLayout>